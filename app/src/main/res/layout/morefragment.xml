<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.common.ToolBar
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:layout_height="60dp"
        app:center_text="更多"></com.example.common.ToolBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/more_register"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_more_regist"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="用户注册"
            android:textSize="25sp"
            android:layout_weight="8"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#D3D0D0"
        android:layout_marginTop="15dp"
        android:layout_height="2dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_more_secret"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="手势密码"
            android:paddingLeft="5dp"
            android:textSize="25sp"
            android:layout_weight="8"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/toggle_off"
            android:id="@+id/more_password"
            android:layout_marginRight="20dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#D3D0D0"
        android:layout_marginTop="15dp"
        android:layout_height="2dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_more_reset"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="重置手势密码"
            android:textSize="25sp"
            android:layout_weight="8"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#D3D0D0"
        android:layout_marginTop="15dp"
        android:layout_height="2dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_more_contact"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="联系客服"
            android:textSize="25sp"
            android:paddingLeft="10dp"
            android:layout_weight="8"/>
        <TextView
            android:layout_width="0dp"
            android:text="010-56253825"
            android:textSize="25sp"
            android:textColor="#FF0000"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="7"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#D3D0D0"
        android:layout_marginTop="15dp"
        android:layout_height="2dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_more_sms"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="用户反馈"
            android:textSize="25sp"
            android:layout_weight="8"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#D3D0D0"
        android:layout_marginTop="15dp"
        android:layout_height="2dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_more_share"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="分享好友"
            android:textSize="25sp"
            android:layout_weight="8"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#D3D0D0"
        android:layout_marginTop="15dp"
        android:layout_height="2dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_more_on"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="关于硅谷理财"
            android:textSize="25sp"
            android:layout_weight="8"/>
    </LinearLayout>
</LinearLayout>