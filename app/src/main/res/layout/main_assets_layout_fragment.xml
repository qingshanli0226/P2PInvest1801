<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/lock_title_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center"
            android:textColor="#24A9DB"
            android:text="我的资产"
            android:textSize="40sp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <ImageView
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_more_on"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#27BAED"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/user_img"
            android:layout_centerInParent="true"
            android:src="@drawable/my_user_default"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:textSize="15dp"
            android:paddingTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_img"
            android:textColor="#fff"
            android:text="Hi!welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <TextView
            android:textSize="15dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorRed"
            android:text="学习提示:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingTop="10dp"
            android:text="充值我们将以继承支付宝SDK支付金额演示功能"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingTop="10dp"
            android:text="提现业务:在p2p金融平台中,提现都不是实时到账的,而是审核提现,系统将会告知在24小时内转账,如果未收到,请联系客服..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:background="#F7F7F7"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:background="#F7F7F7"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/main_assets_recharge"
                android:background="@drawable/my_recharge_bg"
                android:layout_weight="1"
                android:layout_width="80dp"
                android:layout_height="50dp" />
            <TextView
                android:background="#F7F7F7"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/main_assets_withdraw_deposit"
                android:background="@drawable/my_withdraw_bg"
                android:layout_weight="1"
                android:layout_width="80dp"
                android:layout_height="50dp" />
            <TextView
                android:background="#F7F7F7"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:gravity="center"
                android:text="投资管理"
                android:drawableLeft="@drawable/my_invest_manage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:src="@drawable/right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <TextView
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
        <RelativeLayout
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:gravity="center"
                android:text="投资管理(直观)"
                android:drawableLeft="@drawable/my_reward_manage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:src="@drawable/right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <TextView
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
        <RelativeLayout
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:gravity="center"
                android:text="资产管理"
                android:drawableLeft="@drawable/my_asset_manage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:src="@drawable/right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
