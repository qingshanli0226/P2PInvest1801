<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#EEEEEE"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#122733"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/f3_pop2_back"
             android:src="@drawable/left"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="36sp"
            android:text="用户注册"
            android:paddingLeft="90dp"
            android:textColor="#03A9F4"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
       >
        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="手机号："
            android:textSize="24sp"
            android:paddingLeft="20dp"
            android:textColor="#000"
            android:paddingTop="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/f3_pop"
            android:paddingLeft="8dp"
            android:inputType="number"
            android:id="@+id/f3_pop_phone"
            android:hint="请输入手机号"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginTop="3dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="用户名："
            android:textSize="24sp"
            android:paddingLeft="20dp"
            android:textColor="#000"
            android:paddingTop="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/f3_pop"
            android:paddingLeft="8dp"
            android:inputType="text"
            android:id="@+id/f3_pop_username"
            android:hint="请输入用户名"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginTop="3dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="密码："
            android:textSize="24sp"
            android:paddingLeft="20dp"
            android:textColor="#000"
            android:paddingTop="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/f3_pop"
            android:paddingLeft="8dp"
            android:inputType="textPassword"
            android:id="@+id/f3_pop_pwd"
            android:hint="请输入密码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_marginTop="3dp">
        <TextView
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:text="确认密码："
            android:textSize="24sp"
            android:paddingLeft="20dp"
            android:textColor="#000"
            android:paddingTop="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/f3_pop"
            android:paddingLeft="8dp"
            android:inputType="textPassword"
            android:id="@+id/f3_pop_pwdd"
            android:hint="请再次输入密码"/>
    </LinearLayout>

    <Button
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="注册"
        android:id="@+id/f3_pop_btn2"
        android:textSize="26sp"
        android:layout_marginLeft="30dp"
        android:textColor="#fff"
        android:background="@drawable/btn_01"/>

</LinearLayout>