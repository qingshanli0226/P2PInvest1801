<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    android:orientation="vertical"
    tools:context=".home.asset.AssetFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorBlue">
        <ImageView
            android:layout_width="100dp"
            android:id="@+id/asset_head"
            android:src="@drawable/my_user_default"
            android:layout_height="100dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Hi,welcome!" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"


        android:orientation="vertical"
        android:layout_height="200dp">
        <TextView
            android:textSize="15dp"
            android:text="学习提示:"
            android:layout_margin="@dimen/dp_10"
            android:textColor="#B11010"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:text="充值我们将以集成支付宝sdk支付金额演示充值功能"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:text="提现业务:在p2p金融平台中,提现都不是实时到帐的,而是审核提现,系统将会告知24小时内进行转账,如果未收到,请联系客服..."/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/my_recharge_bg"/>
            <View
                android:layout_width="50dp"
                android:layout_height="0dp"></View>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/my_withdraw_bg"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/asset_manage"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="投资管理"
                android:drawableLeft="@drawable/my_invest_manage"/>
            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/asset_anschauung"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="投资管理(直观)"
                android:drawableLeft="@drawable/my_reward_manage"/>
            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/property_manage"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="资产管理"
                android:drawableLeft="@drawable/my_asset_manage"/>
            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/right"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>