<?xml version="1.0" encoding="utf-8"?>
<com.p2p.bawei.p2pinvest1801.user.view.MyDomeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA66CC"
    android:orientation="vertical"
    tools:context=".user.activity.InvestmentActivity">

    <include layout="@layout/common_title" />

    <com.lixs.charts.BarChart.LBarChartView
        android:layout_marginTop="140dp"
        android:layout_gravity="center"
        android:id="@+id/histogram"
        android:layout_width="340dp"
        android:layout_height="330dp"
        app:barShowNumber="6"
        app:borderColor="@color/colorAccent"
        app:bottomTextSpace="20dp"
        app:dataTextColor="@color/colorPrimaryDark"
        app:dataTextSize="12sp"
        app:descriptionTextColor="#000"
        app:descriptionTextSize="20sp"
        app:isClickAnimation="true"
        app:labelTextColor="#FFF"
        app:labelTextSize="10sp"
        app:leftTextSpace="30dp"
        app:titleTextColor="@color/colorPrimaryDark"
        app:titleTextSize="20sp"
        app:topTextSpace="50dp" />


</com.p2p.bawei.p2pinvest1801.user.view.MyDomeLinearLayout>