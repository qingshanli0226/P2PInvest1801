<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:textColor="#24A9DB"
        android:background="@drawable/lock_title_bg"
        android:text="投资"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <android.support.design.widget.TabLayout
        app:tabGravity="fill"
        app:tabIndicatorHeight="50dp"
        app:tabSelectedTextColor="@color/colorRed"
        app:tabIndicatorColor="@color/colorBlue"
        android:id="@+id/main_investment_view_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/main_investment_view_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v4.view.ViewPager>
</LinearLayout>
