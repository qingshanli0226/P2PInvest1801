<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2296F3">

    <com.example.common.view.ToolBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolBar"
        android:visibility="gone"></com.example.common.view.ToolBar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="绘制解锁图案"
        android:layout_gravity="center_horizontal"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:id="@+id/handPasswordTv"/>

    <com.github.ihsg.patternlocker.PatternIndicatorView
        android:id="@+id/patternSmallPassword"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <com.github.ihsg.patternlocker.PatternLockerView
        android:id="@+id/patternPassword"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        app:plv_errorColor="#F54336"
        app:plv_enableHapticFeedback="true"
        app:plv_lineWidth="10dp"/>

</LinearLayout>