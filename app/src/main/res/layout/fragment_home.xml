<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/homeAnim"/>

    <com.example.common.view.ToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/toolBar"></com.example.common.view.ToolBar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#27B8EE"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <com.youth.banner.Banner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bannerHome"></com.youth.banner.Banner>

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_centerInParent="true"
            android:id="@+id/homeTv"
            android:textColor="#666666"/>
        
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/recommend"
            android:layout_toRightOf="@+id/homeTv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="本息保障"
            android:textColor="#666666"
            android:textSize="15sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/home_bac"
            android:layout_marginLeft="@dimen/textSize20"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="每日计息"
            android:textColor="#666666"
            android:textSize="15sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/home_bac"
            android:layout_marginLeft="@dimen/marginLeft10"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="高额收益"
            android:textColor="#666666"
            android:textSize="15sp"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/home_bac"
            android:layout_marginLeft="@dimen/marginLeft10"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/marginLeft10">

        <com.p2p.bawei.p2pinvest1801.ui.RoundProgress
            android:id="@+id/homeRoundProgress"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            app:round_size="25"
            app:circle_color="#5A6E9E"
            app:arc_color="#DC153D"
            app:text_color="#468ECB"
            app:text_size="20sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_centerInParent="true"
            android:id="@+id/homeYear"
            android:textColor="#797979"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        
        <Button
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="立即加入"
            android:textColor="#fff"
            android:textSize="35sp"
            android:textStyle="bold"
            android:background="@drawable/button_bac"/>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风险保障金由硅谷银行监督"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:id="@+id/homeTvMoney"
            android:textColor="#797979"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/guarantee_icon"
            android:layout_toLeftOf="@+id/homeTvMoney"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>