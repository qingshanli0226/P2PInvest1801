<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.mvp.view.fragment.HomeFragment">

    <TextView
        android:gravity="center"
        android:background="#122733"
        android:textSize="30sp"
        android:text="首页"
        android:textColor="#2196F3"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <com.youth.banner.Banner
        android:id="@+id/home_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp">

    </com.youth.banner.Banner>

    <TextView
        android:id="@+id/home_name"
        android:gravity="center"
        android:textSize="30sp"
        android:text="计划"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <Button
            android:text="本息保障"
            android:textColor="#7C7474"
            android:layout_gravity="center"
            android:background="@drawable/et_b"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent" />
        <Button
            android:text="本息保障"
            android:textColor="#7C7474"
            android:background="@drawable/et_b"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent" />
        <Button
            android:text="本息保障"
            android:textColor="#7C7474"
            android:background="@drawable/et_b"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <com.p2p.bawei.p2pinvest1801.custom.ProgressView
        android:id="@+id/progress_view"
        app:stokeSize="30"
        app:circleColor = "#837777"
        app:roundSize="300"
        app:textSize="30sp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <TextView
        android:id="@+id/home_yearRate"
        android:gravity="center"
        android:textSize="20sp"
        android:text="预期年利率:8.00%"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <Button
        android:gravity="center"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:background="@drawable/btn_b_red"
        android:text="立即加入"
        android:textColor="#fff"
        android:layout_width="380dp"
        android:layout_height="60dp" />
    <TextView
        android:gravity="center"
        android:textSize="13sp"
        android:text="风险保障金由硅谷银行监督"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

</LinearLayout>