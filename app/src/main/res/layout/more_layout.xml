<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#456">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="更多"
            android:textColor="#0080FF"
            android:textSize="30dp">

        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/user_register_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_more_regist"
        android:padding="@dimen/dp_10"
        android:text="用户注册"
        android:textColor="@color/textColor"
        android:textSize="30dp">

    </TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/icon_more_secret"
            android:padding="@dimen/dp_10"
            android:text="手势密码"
            android:textColor="@color/textColor"
            android:textSize="30dp">

        </TextView>

        <Switch
            android:id="@+id/hand_lock_swc"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true">

        </Switch>
    </RelativeLayout>


    <TextView
        android:id="@+id/hand_change_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_more_reset"
        android:padding="@dimen/dp_10"
        android:text="重置手势密码"
        android:textColor="@color/textColor"
        android:textSize="30dp">

    </TextView>

    <RelativeLayout
        android:id="@+id/count_phone_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/icon_more_contact"
            android:padding="@dimen/dp_10"
            android:text="联系客服"
            android:textColor="@color/textColor"
            android:textSize="30dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="010-56253825"
            android:textColor="#f00"
            android:textSize="20dp">

        </TextView>
    </RelativeLayout>


    <TextView
        android:id="@+id/user_request_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_more_sms"
        android:padding="@dimen/dp_10"
        android:text="用户反馈"
        android:textColor="@color/textColor"
        android:textSize="30dp">

    </TextView>

    <TextView
        android:id="@+id/share_fired_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_more_share"
        android:padding="@dimen/dp_10"
        android:text="分享好友"
        android:textColor="@color/textColor"
        android:textSize="30dp">

    </TextView>

    <TextView
        android:id="@+id/guiGu_about_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_more_about"
        android:padding="@dimen/dp_10"
        android:text="关于硅谷理财"
        android:textColor="@color/textColor"
        android:textSize="30dp">

    </TextView>
</LinearLayout>