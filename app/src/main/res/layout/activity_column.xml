<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA66CC">

    <com.example.common.view.ToolBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:right_show="false"
        app:title_text="柱状图demo"
        android:id="@+id/toolBar"></com.example.common.view.ToolBar>

    <com.lixs.charts.BarChart.LBarChartView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:id="@+id/frameNewBase"
        app:barShowNumber="10"
        app:borderColor="#2196F3"
        app:descriptionTextColor="#000"
        app:descriptionTextSize="20sp"
        app:isClickAnimation="true"
        app:labelTextColor="#fff"
        app:labelTextSize="15sp"
        app:leftTextSpace="30dp"
        app:dataTextColor="#000"
        app:dataTextSize="10sp"
        app:bottomTextSpace="20dp"></com.lixs.charts.BarChart.LBarChartView>

</RelativeLayout>