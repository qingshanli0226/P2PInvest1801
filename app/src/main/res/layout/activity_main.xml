<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

   <com.example.common.view.ToolBar
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/toolBar"
       android:visibility="gone"></com.example.common.view.ToolBar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:id="@+id/frame"></FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#27B8EE">
    </View>

    <com.flyco.tablayout.CommonTabLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/common"
        android:layout_weight="0.7"
        app:tl_textSelectColor="#3883D1"
        app:tl_textUnselectColor="#808080"
        app:tl_textsize="20sp"
        app:tl_iconHeight="30dp"
        app:tl_iconWidth="30dp"></com.flyco.tablayout.CommonTabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:visibility="gone"></View>

</LinearLayout>