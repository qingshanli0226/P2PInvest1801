<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#102531"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#26B8EE"
            android:id="@+id/me_title"
            android:gravity="center"
            android:textAlignment="center"
            android:text="首页"
            android:textSize="30dp"/>
    </RelativeLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/me_vp"
        android:layout_weight="13"></androidx.viewpager.widget.ViewPager>
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:id="@+id/me_tab"
        app:tabMode="auto"
        app:tabSelectedTextColor="#26B8EE"
        android:layout_height="0dp"
        android:layout_weight="1"></com.google.android.material.tabs.TabLayout>
</LinearLayout>