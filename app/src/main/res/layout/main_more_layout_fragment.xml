<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8"
    android:layout_height="match_parent">

    <TextView
        android:gravity="center"
        android:textColor="#24A9DB"
        android:background="@drawable/lock_title_bg"
        android:text="更多"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/more_register"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:src="@drawable/icon_more_regist"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <TextView
            android:textColor="#8C99BA"
            android:textSize="40dp"
            android:gravity="center"
            android:text="用户注册"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:background="#aaa"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/more_secret"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:drawableLeft="@drawable/icon_more_secret"
            android:textColor="#8C99BA"
            android:textSize="40dp"
            android:gravity="center"
            android:text="手势密码"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <Switch
            android:checked="false"
            android:switchMinWidth="60dp"
            android:track="@drawable/switch_track"
            android:thumb="@drawable/thumb"
            android:id="@+id/more_toggle"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:background="#aaa"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/more_reset"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:drawableLeft="@drawable/icon_more_reset"
            android:textColor="#8C99BA"
            android:textSize="40dp"
            android:gravity="center"
            android:text="重置手势密码"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:background="#aaa"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/more_contact"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:drawableLeft="@drawable/icon_more_contact"
            android:textColor="#8C99BA"
            android:textSize="40dp"
            android:gravity="center"
            android:text="联系客服"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <TextView
            android:textColor="@color/colorRed"
            android:textSize="20dp"
            android:text="00-00-00"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:background="#aaa"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/more_sms"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:drawableLeft="@drawable/icon_more_sms"
            android:textColor="#8C99BA"
            android:textSize="40dp"
            android:gravity="center"
            android:text="用户反馈"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:background="#aaa"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/more_shear"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:drawableLeft="@drawable/icon_more_share"
            android:textColor="#8C99BA"
            android:textSize="40dp"
            android:gravity="center"
            android:text="分享给好友"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:background="#aaa"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/more_about"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:drawableLeft="@drawable/icon_more_about"
            android:textColor="#8C99BA"
            android:textSize="40dp"
            android:gravity="center"
            android:text="关于硅谷理财"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>
