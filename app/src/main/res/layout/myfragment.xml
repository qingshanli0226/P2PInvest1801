<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:text="首页"
        android:textSize="50dp"
        android:gravity="center"
        android:textColor="#26B7ED"
        android:background="#102531"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <com.youth.banner.Banner
        app:image_scale_type="fit_xy"
        android:id="@+id/bann"
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </com.youth.banner.Banner>
    <TextView
        android:id="@+id/jh"
        android:textSize="30dp"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginLeft="10dp"
            android:text="本息保障"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/buttonback"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <Button
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="每日计息"
            android:background="@drawable/buttonback"
            android:layout_width="0dp"
            android:layout_height="40dp" />
        <Button
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="高额收益"
            android:background="@drawable/buttonback"
            android:layout_width="0dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <com.p2p.bawei.p2pinvest1801.mysef.MyPragessagerView
        android:id="@+id/pv"
        app:circle_radil="80dp"
        app:cirloe_color="#181313"
        android:layout_gravity="center"
        app:text_size="24sp"
        app:progessstrokewidth="20"
        app:bar_color="#F70606"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <TextView
        android:id="@+id/lir"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/join"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="立即加入"
        android:textSize="30dp"
        android:textColor="#fff"
        android:background="@drawable/join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_gravity="center"
        android:text="风险保障金由硅谷银行监管"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>