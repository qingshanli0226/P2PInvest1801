<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#152732">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#152732"></LinearLayout>

    <RelativeLayout
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="@dimen/textSize40"
            android:layout_height="@dimen/textSize40"
            android:src="@drawable/left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginLeft10"
            android:id="@+id/toolBarLeftImg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize30"
            android:text="首页"
            android:textColor="#27B8EE"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:id="@+id/toolBarTitle"/>

        <ImageView
            android:layout_width="@dimen/textSize40"
            android:layout_height="@dimen/textSize40"
            android:src="@drawable/my_setting_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginLeft10"
            android:id="@+id/toolBarRightImg"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>



</RelativeLayout>